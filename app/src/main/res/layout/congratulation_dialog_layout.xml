<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_rawRes="@raw/congratulations_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>


            <TextView
                android:id="@+id/male_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOU WIN"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/main_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_coin"
                    />

                <TextView
                    android:id="@+id/mle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="@color/golden"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn_claim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/golden_button_background"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jacques_francois"
                    android:text="Claim now"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>