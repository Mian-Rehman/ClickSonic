<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".MenuFrag.PolicyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="@color/main_color" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/privacy_infographics" />


        <TextView
            android:id="@+id/head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:fontFamily="@font/jacques_francois"
            android:padding="10dp"
            android:text="Privacy Policy of Click Sonic"
            android:textColor="@color/main_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/des_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_below="@+id/head_text"
            android:padding="10dp"
            android:text="@string/privacy_text_1"
            />

        <TextView
            android:id="@+id/des_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_below="@+id/des_text_1"
            android:padding="10dp"
            android:text="@string/privacy_text_1"
            />
    </RelativeLayout>

</ScrollView>