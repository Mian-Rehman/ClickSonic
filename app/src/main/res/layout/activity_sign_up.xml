<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start.SignUpActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signup_infographics" />

    <TextView
        android:id="@+id/create_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_image"
        android:fontFamily="@font/jacques_francois"
        android:padding="10dp"
        android:text="Create New Account"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_text"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_background"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="20dp"
            android:drawableTint="@color/main_color"
            android:elevation="10dp"
            android:hint="Enter your Full Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/main_color"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_background"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:drawableTint="@color/main_color"
            android:elevation="10dp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/main_color"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:drawablePadding="20dp"
            android:drawableTint="@color/main_color"
            android:elevation="10dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:padding="12dp"
            android:textColor="@color/main_color"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_conPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:drawablePadding="20dp"
            android:drawableTint="@color/main_color"
            android:elevation="10dp"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:padding="12dp"
            android:textColor="@color/main_color"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/jacques_francois"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>