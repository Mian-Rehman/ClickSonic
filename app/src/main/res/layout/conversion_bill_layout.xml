<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_color"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="conversion  Bill"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_dialog_background"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/master_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/black"
            android:backgroundTint="#191E3C"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/conversion_banner"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conversion summary"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Coin purchase"
                                android:drawableStart="@drawable/icon_coins"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                />

                            <TextView
                                android:id="@+id/buyCoins_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cutting Points"
                                android:drawableStart="@drawable/icon_points"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                />

                            <TextView
                                android:id="@+id/cuttingPoints_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Remaining Points"
                                android:drawableStart="@drawable/icon_points"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                />

                            <TextView
                                android:id="@+id/remainingPoints_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:drawablePadding="10dp"
                                android:textSize="16sp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"
                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/golden_button_background"
                            android:textColor="@color/white"
                            android:text="Confirm Purchase"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>





</LinearLayout>